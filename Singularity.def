Bootstrap: docker
From: ubuntu:18.04

%setup
    #mkdir /app/

%files
    ./environment.yml /app/environment.yml
    ./de-simple/* /app/

%post
    # Set working dir
    cd /app/
    
    # Gitignore the new container
    echo "*" > /.gitignore

    # Pre-requisite installs
    apt-get -y update
    apt-get -y install wget

    # miniconda3: get miniconda3
    wget https://repo.anaconda.com/miniconda/Miniconda3-py38_4.12.0-Linux-x86_64.sh -O miniconda.sh

    # install conda
    bash miniconda.sh -b -p /opt/miniconda
    export PATH="/opt/miniconda/bin:$PATH"

    # install conda environment.yml file
    echo ". /opt/miniconda/etc/profile.d/conda.sh" >> $SINGULARITY_ENVIRONMENT
    echo "conda activate $(head -1 environment.yml | cut -d' ' -f2)" >> $SINGULARITY_ENVIRONMENT
    /opt/miniconda/bin/conda env create -f environment.yml

    # Activate conda env
    . /opt/miniconda/bin/activate tkgc

    # Download datasets
    export SPLIT=3

    rm -r /app/datasets/*
    mkdir -p /app/datasets/icews14/
    mkdir -p /app/datasets/wikidata/
    wget https://raw.githubusercontent.com/cs-23-mi-10-01/P10/main/datasets/icews14/$SPLIT/test.txt -O /app/datasets/icews14/test.txt
    wget https://raw.githubusercontent.com/cs-23-mi-10-01/P10/main/datasets/icews14/$SPLIT/valid.txt -O /app/datasets/icews14/valid.txt
    wget https://raw.githubusercontent.com/cs-23-mi-10-01/P10/main/datasets/icews14/$SPLIT/train.txt -O /app/datasets/icews14/train.txt
    wget https://raw.githubusercontent.com/cs-23-mi-10-01/P10/main/datasets/wikidata12k/$SPLIT/test.txt -O /app/datasets/wikidata/test.txt
    wget https://raw.githubusercontent.com/cs-23-mi-10-01/P10/main/datasets/wikidata12k/$SPLIT/valid.txt -O /app/datasets/wikidata/valid.txt
    wget https://raw.githubusercontent.com/cs-23-mi-10-01/P10/main/datasets/wikidata12k/$SPLIT/train.txt -O /app/datasets/wikidata/train.txt
    
    # Test
    echo "PWD and contents:"
    pwd
    ls

%runscript
    echo "--- Start run ---"
    echo "executing $@"
    exec "$@"

%test
    echo "Test script"

